
<br>
  <div class="new-recipe">
    <h4>Create a Recipe</h4>
    <section>
      <%= form_for @recipe do |form| %>
      <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>
      <div>
        <%= form.label :description %>
        <%= form.text_field :description %>
      </div>
      <div>
        <%= label_tag :dead_man_switch, "Timer Interval" %>
        <%= select_tag :recipe_type, options_for_select(recipe_type) %>
      </div>
      <%= form.submit 'Create Recipe' %>
      <% end %>
  </section>
  </div>
</div>
