
<br>
  <div class="new-recipe">
    <h4>Create a Recipe</h4>
    <section>
      <%= form_for [@user, @recipe] do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :recipe_type, "Recipe Type" %>
        <%= select_tag :recipe_type, options_for_select(recipe_type), class: "form-control" %>
      </div>
      <%= form.submit 'Create Recipe', class: "btn btn-primary" %>
      <% end %>
  </section>
  </div>
</div>
