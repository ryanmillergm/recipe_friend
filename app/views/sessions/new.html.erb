
<div class="user-login">
  <h4>Log In</h4>
  <section>
    <%= form_for :session, url: sessions_path do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <%= f.submit 'Log In', class: "btn btn-primary" %>
    <% end %>
  </section>
  <br>
  <div class="facebook-oauth">
    <div>
      <%= link_to image_tag('facebook-login.png', width: '430'), "/auth/facebook", :alt => "'Login using Facebook'"%>
    </div>
  </div>
  <div class="or">
    <p>or</p>
  </div>
  <div class="google-oauth">
    <div class="d-inline-flex p-2 bd-highlight">
      <%= link_to image_tag('google-sign-in.png', width: '400'), auth_google_oauth2_path, :alt => "'Login using Google'"%>
    </div>
  </div>
  <div>
    <p>Not a member yet? <%= link_to 'Click here to create an account', new_user_path %></p>
    </div
</div>
