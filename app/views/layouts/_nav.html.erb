<!-- app/views/layouts/_nav.html.erb -->

<nav class="navbar navbar-icon-top navbar-expand-lg navbar-light bg-light" id="nav">

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarText">

    <a class="navbar-brand" href="/">
      <%=image_tag("recipe-hound.jpg", height: '50', width: '50')%>
    </a>

    <ul class="navbar-nav mr-auto navbar-left">
      <li class="nav-item active">
        <%= link_to 'Home', root_path, class: 'nav-link' %>
          <span class="sr-only">(current)</span>
      </li>
      <% if current_user %>
        <li class="nav-item">
          <%= link_to 'Dashboard', dashboard_path, class: 'nav-link' %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="/spreads" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            My Stuff
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="<%= favorites_path %>">Favorites</a>
            <a class="dropdown-item" href="<%= dashboard_my_recipes_path %>">My Recipes</a>
            <a class="dropdown-item" href="<%= root_path %>">My Reviews</a>
            <a class="dropdown-item" href="<%= root_path %>">My Photos</a>
            <a class="dropdown-item" href="<%= new_user_recipe_path(current_user.id) %>">Add Recipe</a>
          </div>
        </li>
        <% end %>
    </ul>

    <ul class="navbar-nav mr-auto navbar-center">
      <span class="navbar-text" id="recipe-hound">
        <p class="h3">Recipe Hound</p>
      </span>
    </ul>

    <ul class="navbar-nav mr-auto navbar-left">
      <span class="navbar-text"></span>
      <%= form_tag :recipes, method: :get, class: "form-inline" do %>
      <div class="form-group search-field">
        <%= text_field_tag(:q) %>
        <%= submit_tag "Search Recipes", class: "btn btn-primary" %>
      </div>
      <% end %>
    </ul>

    <% if current_user.nil? %>
    <ul class="navbar-nav">
      <span class="navbar-text">
        <%= link_to 'Log in', new_session_path, class: 'nav-link' %>
      </span>
    </ul>
    <% else %>
    <div class="d-flex flex-row-reverse">
      <div class="nav-item dropdown">
       <a class="nav-link dropdown-toggle" href="/breads" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
         <%= current_user.first_name %>
       </a>
       <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
         <a class="dropdown-item" href="<%= user_path(current_user) %>">View Profile</a>
         <a class="dropdown-item" href="<%= edit_user_path(current_user.id) %>">Edit Account</a>
         <a class="dropdown-item"  <%= link_to 'Log out', session_path(current_user.id), method: :delete, class: 'nav-link' %></a>
       </div>
      </div>
     </div>
    <% end %>
  </div>
</nav>
